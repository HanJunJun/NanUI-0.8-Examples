<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFrameworks>netcoreapp3.1;net472;</TargetFrameworks>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' != 'netcoreapp3.1' ">
        <ApplicationManifest>app.manifest</ApplicationManifest>
    </PropertyGroup>
    <ItemGroup>
      <None Remove="wwwroot\index.html" />
    </ItemGroup>
    <ItemGroup>
      <EmbeddedResource Include="wwwroot\index.html" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="NetDimension.NanUI" Version="0.8.80.144" />
      <PackageReference Include="NetDimension.NanUI.EmbeddedFileResource" Version="0.8.80.142" />
      <PackageReference Include="NetDimension.NanUI.Runtime" Version="80.1.15" />
    </ItemGroup>
</Project>